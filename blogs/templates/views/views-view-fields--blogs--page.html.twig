<div class="blog-wrapper rounded p-5">
  <div class="user-image position-absolute">
    {{ fields.user_picture.content }}
  </div>
  <div class="row mt-5">
    <div class="col-lg-12">
      <h1>{{ fields.title.content }}</h1>
      <div class="mb-2">
        <strong>Posted On : </strong><span>{{ fields.created.content }} </span>
        <strong class="ml-2">Written By : </strong><span>{{ fields.uid.content }}</span>
      </div>
       {{ fields.body.content }}
      <div class="row p-3">
        <div class="col-lg-6">
          {{ fields.view_node.content }}
        </div>
      </div>
    </div>
  </div>
</div>