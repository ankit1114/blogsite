{%
  set classes = [
    'paragraph',
    'paragraph--type--' ~ paragraph.bundle|clean_class,
    view_mode ? 'paragraph--view-mode--' ~ view_mode|clean_class,
    not paragraph.isPublished() ? 'paragraph--unpublished'
  ]
%}
{% block paragraph %}
  <div{{ attributes.addClass(classes) }}>
    {% block content %}
      <h3>{{ content.field_section_title_ }}</h3>
      <div class="row mt-2">
        <div class="col-lg-6">
          {{ content.field_section_image }}
        </div>
        <div class="col-lg-6">
          {{ content.field_main_content }}
        </div>
      </div>
    {% endblock %}
  </div>
{% endblock paragraph %}


